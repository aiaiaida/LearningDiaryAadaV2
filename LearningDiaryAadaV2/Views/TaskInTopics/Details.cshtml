@model LearningDiaryAadaV2.Models.TaskInTopic

@{
    ViewData["Title"] = "Details";
}

<div class="header-center">
    <h1>Details</h1>
</div>

<div class="edit-back">
    <a asp-area="" asp-controller="App" asp-action="GetStarted">Back</a>
</div>


<section class="cards-container" data-cards>
    <div class="card" style="border-color:#84ADA6;">
        <div class="card-tag" style="background-color: #84ADA6; color: black;">
            Task
        </div>
        <div class="card-description">
            <table>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Id): </td>
                    <td>@Html.DisplayFor(model => model.Id) </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.TopicId): </td>
                    <td>@Html.DisplayFor(model => model.TopicId)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Title): </td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Description): </td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Deadline): </td>
                    <td>@Html.DisplayFor(model => model.Deadline)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Priority): </td>
                    <td>@Html.DisplayFor(model => model.Priority)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Done): </td>
                    <td>@Html.DisplayFor(model => model.Done)</td>
                </tr>
            </table>

        </div>
        <div class="card-actions">
            <a asp-area="" asp-controller="TaskInTopics" asp-action="Edit" asp-route-id="@Model.Id"><i class="far fa-edit"></i></a>
            <a asp-area="" asp-controller="TaskInTopics" asp-action="Delete" asp-route-id="@Model.Id"><i class="far fa-trash-alt"></i></a>
        </div>
    </div>

    @foreach (var item in Model.Notes)
    {
        <div class="card" style="border-color:#84ADA6; margin-top:4em;">
            <a class="detail-cta" asp-area="" asp-controller="Notes" asp-action="Details" asp-route-id="@item.Id">
                <div class="card-tag" style="background-color: #84ADA6; color: black;">
                    Note
                </div>
                <p class="card-description">
                    <table>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.Id): </td>
                            <td>@Html.DisplayFor(modelItem => item.Id) </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.TopicId): </td>
                            <td>@Html.DisplayFor(modelItem => item.TopicId)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.TaskId): </td>
                            <td>@Html.DisplayFor(modelItem => item.TaskId)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.Note1): </td>
                            <td>@Html.DisplayFor(modelItem => item.Note1)</td>
                        </tr>
                    </table>
                </p>
            </a>
            <div class="card-actions">
                <a asp-area="" asp-controller="Notes" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                <a asp-area="" asp-controller="Notes" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
            </div>
        </div>
    }
    <div class="card" style="border-color:#84ADA6;" width="800px" margin-top="4em" ;>
        <a class="detail-cta" asp-area="" asp-controller="Notes" asp-action="Create">
            <div class="card-tag" style="background-color: #84ADA6; color: black;">
                Add new note
            </div>
            <p class="card-description">
                Add a new note by clicking on it
                <img src="~/Content/Images/addNew.png" />
            </p>
        </a>
    </div>

</section>