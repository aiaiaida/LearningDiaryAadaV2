@model LearningDiaryAadaV2.Models.TaskInTopic

@{
    ViewData["Title"] = "Delete";
}

<div class="header-center">
    <h1>Delete</h1>
    <h4>Task</h4>
    <h3>Are you sure you want to delete this?</h3>
</div>


<div class="edit-back">
    <a asp-area="" asp-controller="App" asp-action="TaskView">Back</a>
</div>

<section class="cards-container" data-cards>
    <div class="card" style="border-color:#84ADA6;">
        <div class="card-tag" style="background-color: #84ADA6; color: black;">
            Task
        </div>
        <div class="card-description">
            <table>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Id): </td>
                    <td>@Html.DisplayFor(model => model.Id) </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.TopicId): </td>
                    <td>@Html.DisplayFor(model => model.TopicId)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Title): </td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Description): </td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Deadline): </td>
                    <td>@Html.DisplayFor(model => model.Deadline)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Priority): </td>
                    <td>@Html.DisplayFor(model => model.Priority)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Done): </td>
                    <td>@Html.DisplayFor(model => model.Done)</td>
                </tr>
            </table>
        </div>
    </div>
</section>

<form asp-action="Delete" class="edit-back">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
