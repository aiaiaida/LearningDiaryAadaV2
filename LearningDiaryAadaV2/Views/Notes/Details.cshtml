@model LearningDiaryAadaV2.Models.Note

@{
    ViewData["Title"] = "Details";
}

<div class="header-center">
    <h1>Details</h1>
</div>

<div class="edit-back">
    <a asp-area="" asp-controller="App" asp-action="GetStarted">Back</a>
</div>

<section class="cards-container" data-cards>
    <div class="card" style="border-color:#84ADA6;">
        <a class="detail-cta" asp-area="" asp-controller="Notes" asp-action="Details" asp-route-id="@Model.Id">
            <div class="card-tag" style="background-color: #84ADA6; color: black;">
                Note
            </div>
            <p class="card-description">
                <table>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Id): </td>
                        <td>@Html.DisplayFor(model => model.Id) </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.TopicId): </td>
                        <td>@Html.DisplayFor(model => model.TopicId)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.TaskId): </td>
                        <td>@Html.DisplayFor(model => model.TaskId)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Note1): </td>
                        <td>@Html.DisplayFor(model => model.Note1)</td>
                    </tr>
                </table>
            </p>
        </a>
        <div class="card-actions">
            <a asp-area="" asp-controller="Notes" asp-action="Edit" asp-route-id="@Model.Id"><i class="far fa-edit"></i></a>
            <a asp-area="" asp-controller="Notes" asp-action="Delete" asp-route-id="@Model.Id"><i class="far fa-trash-alt"></i></a>
        </div>
    </div>
</section>
