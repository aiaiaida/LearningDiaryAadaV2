@model LearningDiaryAadaV2.Models.Topic

@{
    ViewData["Title"] = "Edit";
}
<div class="header-center">
    <h1>Edit</h1>

    <h4>Topic</h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedTimeToMaster" class="control-label"></label>
                <input asp-for="EstimatedTimeToMaster" class="form-control" />
                <span asp-validation-for="EstimatedTimeToMaster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSpent" class="control-label"></label>
                <input asp-for="TimeSpent" class="form-control" />
                <span asp-validation-for="TimeSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartLearningDate" class="control-label"></label>
                <input asp-for="StartLearningDate" class="form-control" />
                <span asp-validation-for="StartLearningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InProgress" class="control-label"></label>
                <input asp-for="InProgress" class="form-control" />
                <span asp-validation-for="InProgress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionDate" class="control-label"></label>
                <input asp-for="CompletionDate" class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div class="back-cta">
    <a asp-area="" asp-controller="App" asp-action="GetStarted">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
